COMMIT_MSG_FILE=$1

echo "***prepare-commit-msg"
echo "Commit message:"
cat $COMMIT_MSG_FILE

if [ ! -s "$COMMIT_MSG_FILE" ]; then
  exec < /dev/tty && pnpm cz --hook || true
fi
